<script src="https://checkout.stripe.com/v2/checkout.js"></script>

<% if(env === 'production') { %>
  <button id="stripe-button" 
    data-currency="<%- currency %>"
    data-key="<%- api_key_publishable_production %>" 
    data-amount="<%- amount %>" 
    data-description="<%- description %>" 
    data-name="<%- name %>">
      <span>Pay with Credit Card</span>
  </button>
<% } else { %>
  <button id="stripe-button" 
    data-currency="<%- currency %>"
    data-key="<%- api_key_publishable_test %>" 
    data-amount="<%- amount %>" 
    data-description="<%- description %>" 
    data-name="<%- name %>">
      <span>Pay with Credit Card</span>
  </button>
<% }%>


