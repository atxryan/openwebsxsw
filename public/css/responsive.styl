@import 'variables'

/* 1em = 16px */

/* 1440px */

$trans = translate(85%, 50%)
@media only screen and (max-width: 90em)

  #logo
    -webkit-transform: $trans
    -moz-transform: $trans
    -o-transform: $trans
    -ms-transform: $trans
    transform: $trans
    -webkit-transform-origin: top left
    -moz-transform-origin: top left
    -o-transform-origin: top left
    -ms-transform-origin: top left
    transform-origin: top left
  
  
/* 1024px */
$trans = translate(65%, 33%) scale(0.7,0.7)
@media only screen and (max-width: 64em)
  #logo
    -webkit-transform: $trans
    -moz-transform: $trans
    -o-transform: $trans
    -ms-transform: $trans
    transform: $trans
      

/* 768px */
$trans = translate(50%, 25%) scale(0.55,0.55)
@media only screen and (max-width: 48em)
  #logo
    -webkit-transform: $trans
    -moz-transform: $trans
    -o-transform: $trans
    -ms-transform: $trans
    transform: $trans

  section [role="social"]
    margin 7% 0

    
/* 640px */
