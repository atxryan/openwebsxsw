@import 'variables'
@import 'normalize'

*,
*:after,
*:before
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

*
  -webkit-transition: all 0.3s ease
  -moz-transition: all 0.3s ease
  -o-transition: all 0.3s ease
  transition: all 0.3s ease

html, body
  height 100%

body
  font-size: 100%
  font-family: 'LeagueGothicRegular', Helvetica, Arial, sans-serif
  background #f4f5ed url('/img/debut_light.png') repeat top left scroll
  color #444
  
img
  max-width 100%
  
a
  color: #29d4c7
  text-decoration none

.no-touch a:hover
  color: darken(#29d4c7,2)
  text-decoration underline

p
  font-size 1.6em
  font-weight 100  
  
#container
  margin 0 auto
  text-align center
  padding-bottom 2.5%

#branding
  width 100%
  display block

#logo-container
  position absolute
  top 0
  left 0

#logo
  display inline-block
  margin 0 auto
  
header
  -webkit-box-shadow: 0 8px 6px -6px rgba(0,0,0, 0.56)
  -moz-box-shadow: 0 8px 6px -6px black
  -webkit-box-shadow: 0 1px 6px 1px rgba(0,0,0, 0.56)

h1
  font-size 3.6em
  font-weight normal
  line-height 1.2

footer
  margin 3% auto
  text-align: center
  width: 100%

section [role="main"]
  width 100%
  
@import 'buttons'
@import 'responsive'